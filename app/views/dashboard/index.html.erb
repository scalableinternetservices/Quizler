<h1>Welcome!</h1>

<% if user_signed_in? %>
    <%= link_to 'Log out', destroy_user_session_path, method: :delete %>
    <br>
    <%= link_to 'Quizzes', quizzes_path %>

    <%= link_to 'Find friends', friends_search_path %>
<% else %>
    <%= link_to 'Sign Up', new_user_registration_path %>
    <%= link_to 'Log in', new_user_session_path %>
<% end %>

<%= form_tag(one_player_game_flow_ready_path, :method => "get", id: "quiz-id-form") do %>
    <br>
        <%= label_tag('Join quiz by ID') %>
        <br>
        <%= text_field_tag :quiz_id, params[:input_quiz_id], placeholder: "Enter ID" %>
        <button type="submit">Find</button>
<% end %>

