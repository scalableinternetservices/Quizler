<% if flash[:notice] || flash[:alert] || flash[:warning] %>
    <div class="alert <%= flash[:notice] ? 'alert-success' : '' %> <%= flash[:alert] ? 'alert-danger' : '' %> <%= flash[:warning] ? 'alert-warning' : '' %> alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span></button>
        <% if flash[:notice] %>
          <i class="fa fa-check u-m-mg-right"></i><%= flash[:notice] %>
        <% elsif flash[:alert] %>
          <i class="fa fa-exclamation u-m-mg-right"></i><%= flash[:alert] %>
        <% elsif flash[:warning] %>
          <i class="fa fa-exclamation-triangle u-m-mg-right"></i><%= flash[:warning] %>
        <% end %>
    </div >
<% end %>