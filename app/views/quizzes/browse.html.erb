<% content_for :header do %>
    <h1>Listing quizzes</h1>
<% end %>

<table class="table text-left">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Author</th>
      <th>Created at</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @quizzes.each do |quiz| %>
      <tr>
        <td><%= quiz.title %></td>
        <td><%= quiz.description %></td>
        <td><%= User.find(quiz.author).username %></td>
        <td><%= quiz.created_at %></td>
        <td><%= link_to 'Show', quiz %></td>
        <td><%= link_to 'Play',  one_player_game_flow_ready_path(:quiz_id => quiz)%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate @quizzes, :param_name => :page %>

<br>

<%= link_to 'Main View', root_path() %>
