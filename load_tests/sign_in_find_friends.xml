<?xml version="1.0"?>
<!DOCTYPE tsung SYSTEM "/home/ec2-user/opt/tsung-1.5.0/share/tsung/tsung-1.0.dtd">
<tsung loglevel="notice" version="1.0">

  <!-- Client side setup -->
  <clients>
    <client host="localhost" use_controller_vm="true" maxusers='15000'/>
  </clients>

  <!-- Server side setup -->
  <servers>
    <server host="52.91.34.72" port="80" type="tcp"></server>
  </servers>

  <!-- Adding more users -->
  <load>
    <arrivalphase phase="1" duration="30" unit="second">
      <users interarrival="2" unit="second"></users>
    </arrivalphase>
<!--    <arrivalphase phase="2" duration="60" unit="second">
      <users arrivalrate="4" unit="second"></users>
    </arrivalphase>
    <arrivalphase phase="3" duration="60" unit="second">
      <users arrivalrate="6" unit="second"></users>
    </arrivalphase>
    <arrivalphase phase="4" duration="60" unit="second">
      <users arrivalrate="8" unit="second"></users>
    </arrivalphase>
    <arrivalphase phase="5" duration="60" unit="second">
      <users arrivalrate="10" unit="second"></users>
    </arrivalphase>
    -->
  </load>

  <options>
    <!-- Set connection timeout to 2 seconds -->
    <option name="global_ack_timeout" value="2000"></option>

    <option type="ts_http" name="user_agent">
      <user_agent probability="100">Mozilla/5.0 (Windows; U; Windows NT 5.2; fr-FR; rv:1.7.8) Gecko/20050511 Firefox/1.0.4</user_agent>
    </option>
  </options>

  <sessions>
    <session name="sign-in-search-friends" probability="100" type="ts_http">
      <request>
        <http url="/" version="1.1" method='GET'></http>
      </request>
      <thinktime value="5" random="true"></thinktime>

      <request>
        <dyn_variable name="authenticity_token"></dyn_variable>
        <http url="/users/sign_in" method="GET" version="1.1"></http>
      </request>

      <setdynvars sourcetype="eval" code="fun({Pid,DynVars})->
  {ok, Val} = ts_dynvars:lookup(authenticity_token, DynVars),
  list_to_binary(http_uri:encode(binary_to_list(Val)))
end.">
  <var name="escaped_authenticity_token" />
      </setdynvars>

      <thinktime value="5" random="true"></thinktime>

      <request subst="true">
        <http url="/users/sign_in"
              method="POST" version="1.1"
              contents="user%5Bemail%5D=heather%40whatever.com&amp;user%5Bpassword%5D=awesomepassword&amp;user%5Bremember_me%5D=1&amp;authenticity_token=%%_escaped_authenticity_token%%"
              content_type="application/x-www-form-urlencoded"></http>
      </request>
      <thinktime value="10" random="true"></thinktime>

      <request>
        <http url="/friends/search" method="GET" version="1.1"></http>
      </request>
    </session>
  </sessions>

</tsung>
